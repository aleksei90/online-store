{% extends "base.html.twig" %}

{% block content %}
    <!--Start of Home Content-->
        <div class="col-main">
            <div class="std">

                <!--Start Banner-->
                <div class="banner_box">
                    <div class="slider-wrapper banner">
                        <!--Place your banner images-->
                        <div id="slider" class="banner_slider">
                            {% for key, value in sliders %}
                                <a  href="{{ value.link }}">
                                    <img src="{{ pathToSliderImages }}/{{ value.image }}" alt="" />
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="promotional_block"> <!--Place your promotional images-->
                        {% for key, value in banners %}

                            <div class="block_one">
                                <a href="{{ value.link }}">
                                    <img src="{{ pathToSliderImages }}/{{ value.image }}" alt="" />
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <!--End Banner-->

                <!--Start New Products-->
                <div class="box-center">
                    {% if newProduct is not empty %}
                        <div class="special">
                            <div id="mix_container" class="mix_container">
                                <h1 class="category_page_title"> New Products</h1>
                                <div class="mix_nav"> <span id="mix_prev" class="mix_prev">Previous</span> <span id="mix_next" class="mix_next">Next</span> </div>
                                <div id="container" class="mix_wrapper">
                                    <ul style="position: relative;" class="mix_gallery">
                                        {% for key, value in newProduct %}
                                            {%  set last = '' %}
                                            {%  if (key + 1) % 5 == 0 %}
                                                {%  set last = 'last' %}
                                            {%  endif %}

                                            <li class="item mix_row">
                                                <div class="outer box"> <a href="#" class="product-image"><img src="{{ pathToProductImages }}/{{ value.image }}" alt="Imperdiet id tincidunt " /></a>
                                                    <div class="ic_caption">
                                                        <h2 class="product-name"><a href="#" title="{{ value.name }}">"{{ value.name }}"</a></h2>
                                                        <div class="actions">
                                                            <button style="display:none;" type="button" title="Add to Cart" class="button btn-cart"> <span> <span>Add to Cart</span> </span> </button>
                                                            <a rel="example_group" href="{{ pathToSliderImages }}/{{ value.image }}" class="fancybox quickllook" id="fancybox170">Quick look</a>
                                                            <div class="price-box"> <span class="regular-price"> <span class="price">{{ value.price }}"</span> </span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
                <!--End New Products-->

            </div>
        </div>
   {% endblock %}
